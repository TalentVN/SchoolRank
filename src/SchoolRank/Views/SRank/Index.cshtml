@model IEnumerable<TalentVN.ApplicationCore.Entities.SRank>

@{
    ViewData["Title"] = "Index";
}

<div class="alert alert-dark" role="alert">
    <h2>University Rank</h2>
</div>
<hr class="my-1">

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="card ">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4">
                            @if (string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img class="card-img-top" src="https://pbs.twimg.com/profile_images/497135574243766273/zNjKQH4r.png" alt="Card image cap">
                            }
                            else
                            {
                                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                            }

                        </div>
                        <div class="col-sm-8">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description ...</p>
                            <a asp-controller="TalentVN.SchoolRank" asp-action="Detail" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-4">
        </div>
    }
</div>
